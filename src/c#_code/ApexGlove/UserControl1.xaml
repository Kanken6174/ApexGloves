                     Margin="626,615,0,0"
                     VerticalAlignment="Top"
                     Width="118"
                     Value="50"
                     RenderTransformOrigin="0.5,0.5"
                     Maximum="1023">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="0.956"
                                    ScaleX="-1.046" />
                    <SkewTransform />
                    <RotateTransform Angle="90" />
                    <TranslateTransform />
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <ProgressBar x:Name="ringRight"
                     HorizontalAlignment="Left"
                     Height="19"
                     Margin="585,596,0,0"
                     VerticalAlignment="Top"
                     Width="145"
                     Value="50"
                     RenderTransformOrigin="0.5,0.5"
                     Maximum="1023">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="0.956"
                                    ScaleX="-1.046" />
                    <SkewTransform />
                    <RotateTransform Angle="90" />
                    <TranslateTransform />
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <ProgressBar x:Name="middleRight"
                     HorizontalAlignment="Left"
                     Height="19"
                     Margin="544,586,0,0"
                     VerticalAlignment="Top"
                     Width="164"
                     Value="50"
                     RenderTransformOrigin="0.5,0.5"
                     Maximum="1023">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="0.956"
                                    ScaleX="-1.046" />
                    <SkewTransform />
                    <RotateTransform Angle="90" />
                    <TranslateTransform />
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <ProgressBar x:Name="indexRight"
                     HorizontalAlignment="Left"
                     Height="19"
                     Margin="522,591,0,0"
                     VerticalAlignment="Top"
                     Width="146"
                     Value="50"
                     RenderTransformOrigin="0.5,0.5"
                     Maximum="1023">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="0.956"
                                    ScaleX="-1.046" />
                    <SkewTransform />
                    <RotateTransform Angle="90" />
                    <TranslateTransform />
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <ProgressBar x:Name="thumbXRight"
                     HorizontalAlignment="Left"
                     Height="29"
                     Margin="508,638,0,0"
                     VerticalAlignment="Top"
                     Width="100"
                     Value="50"
                     RenderTransformOrigin="0.5,0.5"
                     Maximum="1023">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="0.956"
                                    ScaleX="-1.046" />
                    <SkewTransform />
                    <RotateTransform Angle="90" />
                    <TranslateTransform />
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <ProgressBar x:Name="thumbYRight"
                     HorizontalAlignment="Left"
                     Height="29"
                     Margin="499,714,0,0"
                     VerticalAlignment="Top"
                     Width="27"
                     Value="50"
                     RenderTransformOrigin="1.333,0.5"
                     Maximum="1023">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1" />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <Ellipse x:Name="StatusElipseRight"
                 HorizontalAlignment="Center"
                 Height="100"
                 Stroke="Black"
                 Fill="red"
                 VerticalAlignment="Center"
                 Width="100"
                 Margin="585,700,115,45"
                 RenderTransformOrigin="0.5,-1.635">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1" />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>
        <Canvas x:Name="RightGimball"
                HorizontalAlignment="Left"
                Height="105"
                Margin="581,698,0,0"
                VerticalAlignment="Top"
                Width="110">
            <Ellipse x:Name="targetR"
                     HorizontalAlignment="Center"
                     Height="30"
                     Stroke="Black"
                     Fill="white"
                     VerticalAlignment="Center"
                     Width="30"
                     Canvas.Top="40"
                     Canvas.Left="40" />
        </Canvas>
        <Button x:Name="button_open_Copy"
                Content="Connect"
                HorizontalAlignment="Left"
                Margin="640,279,0,0"
                VerticalAlignment="Top"
                Height="22"
                Width="65"
                Click="button_open_Click" />
        <ComboBox x:Name="comboBox_comPortR"
                  HorizontalAlignment="Left"
                  Margin="515,279,0,0"
                  VerticalAlignment="Top"
                  Width="120"
                  DropDownOpened="comboBox_comPort_DropDown"
                  SelectedValuePath="Content" />
        <ComboBox x:Name="comboBox_baudRateR"
                  HorizontalAlignment="Left"
                  Margin="515,252,0,0"
                  VerticalAlignment="Top"
                  Width="120"
                  DropDownOpened="comboBox_baudRate_DropDown" />
        <Button x:Name="button_close_Copy"
                Content="Disconnect"
                HorizontalAlignment="Left"
                Margin="710,279,0,0"
                VerticalAlignment="Top"
                Height="22"
                Width="65"
                Click="button_close_Click"
                IsEnabled="False" />
    </Grid>
</UserControl>
