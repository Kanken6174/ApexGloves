<UserControl x:Class="ApexGlove.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ApexGlove"
             mc:Ignorable="d"
             d:DesignWidth="800"
             Loaded="Form1_Load"
             Height="845">
    <Grid>
        <Ellipse x:Name="StatusElipse"
                 HorizontalAlignment="Center"
                 Height="115"
                 Stroke="Black"
                 Fill="red"
                 VerticalAlignment="Center"
                 Width="120"
                 Margin="300,159,380,571"
                 RenderTransformOrigin="0.5,-1.635" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="300,288,0,0"
                   Text="Connected to:"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   Width="85"
                   RenderTransformOrigin="0.412,-2.25" />
        <TextBlock x:Name="COMID"
                   HorizontalAlignment="Left"
                   Margin="385,288,0,0"
                   Text=""
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   Width="85" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="300,313,0,0"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   RenderTransformOrigin="0.49,-3.938"><Run Language="fr-fr"
                                                Text="Raw data:" /></TextBlock>
        <TextBlock x:Name="COMDATA"
                   HorizontalAlignment="Left"
                   Margin="356,320,0,0"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   Width="104"
                   Text="">
        </TextBlock>
        <Button x:Name="button_open"
                Content="Connect"
                HorizontalAlignment="Left"
                Margin="135,279,0,0"
                VerticalAlignment="Top"
                Height="22"
                Width="65"
                Click="button_open_Click" />

        <ComboBox x:Name="comboBox_comPort"
                  HorizontalAlignment="Left"
                  Margin="10,279,0,0"
                  VerticalAlignment="Top"
                  Width="120"
                  DropDownOpened="comboBox_comPort_DropDown"
                  SelectedValuePath="Content">
        </ComboBox>

        <ComboBox x:Name="comboBox_baudRate"
                  HorizontalAlignment="Left"
                  Margin="10,252,0,0"
                  VerticalAlignment="Top"
                  Width="120"
                  DropDownOpened="comboBox_baudRate_DropDown">
        </ComboBox>
        <Button x:Name="button_close"
                Content="Disconnect"
                HorizontalAlignment="Left"
                Margin="205,279,0,0"
                VerticalAlignment="Top"
                Height="22"
                Width="65"
                Click="button_close_Click"
                IsEnabled="False" />
        <Button Content="Request data"
                x:Name="req_button"
                HorizontalAlignment="Left"
                Margin="135,311,0,0"
                VerticalAlignment="Top"
                Width="135"
                IsEnabled="False"
                Click="requestData" />
        <Button Content="Calibrate upper"
                HorizontalAlignment="Left"
                Margin="135,375,0,0"
                VerticalAlignment="Top"
                Width="105" 
                Click="Calibrate_UP"/>
        <Button Content="Calibrate lower"
                HorizontalAlignment="Left"
                Margin="135,400,0,0"
                VerticalAlignment="Top"
                Width="105" />
        <ProgressBar x:Name="pinkieLeft"
                     HorizontalAlignment="Left"
                     Height="20"
                     Margin="15,610,0,0"
                     VerticalAlignment="Top"
                     Width="130"
                     Value="50"
                     RenderTransformOrigin="0.5,0.5"
                     Maximum="1023">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="-90" />
                    <TranslateTransform />
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <ProgressBar x:Name="ringLeft"
                     HorizontalAlignment="Left"
                     Height="20"
                     Margin="30,590,0,0"
                     VerticalAlignment="Top"
                     Width="160"
                     Value="50"
                     RenderTransformOrigin="0.5,0.5"
                     Maximum="1023">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="-90" />
                    <TranslateTransform />
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <ProgressBar x:Name="middleLeft"
                     HorizontalAlignment="Left"
                     Height="20"
                     Margin="55,580,0,0"
                     VerticalAlignment="Top"
                     Width="180"
                     Value="50"
                     RenderTransformOrigin="0.5,0.5"
                     Maximum="1023">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="-90" />
                    <TranslateTransform />
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <ProgressBar x:Name="indexLeft"
                     HorizontalAlignment="Left"
                     Height="20"
                     Margin="99,585,0,0"
                     VerticalAlignment="Top"
                     Width="160"
                     Value="50"
                     RenderTransformOrigin="0.5,0.5"
                     Maximum="1023">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="-90" />
                    <TranslateTransform />
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <ProgressBar x:Name="thumbXLeft"
                     HorizontalAlignment="Left"
                     Height="30"
                     Margin="165,635,0,0"
                     VerticalAlignment="Top"
                     Width="110"
                     Value="50"
                     RenderTransformOrigin="0.5,0.5"
                     Maximum="1023">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="-90" />
                    <TranslateTransform />
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <ProgressBar x:Name="thumbYLeft"
                     HorizontalAlignment="Left"
                     Height="30"
                     Margin="205,715,0,0"
                     VerticalAlignment="Top"
                     Width="30"
                     Value="50"
                     RenderTransformOrigin="1.333,0.5"
                     Maximum="1023">

        </ProgressBar>
        <Ellipse x:Name="StatusElipse_Copy"
                 HorizontalAlignment="Center"
                 Height="105"
                 Stroke="Black"
                 Fill="red"
                 VerticalAlignment="Center"
                 Width="110"
                 Margin="80,700,610,40"
                 RenderTransformOrigin="0.5,-1.635" />
        <Canvas x:Name="LeftGimball"
                HorizontalAlignment="Left"
                Height="105"
                Margin="80,700,0,0"
                VerticalAlignment="Top"
                Width="110">
            <Ellipse x:Name="targetL"
                     HorizontalAlignment="Center"
                     Height="30"
                     Stroke="Black"
                     Fill="white"
                     VerticalAlignment="Center"
                     Width="30"
                     Canvas.Top="40"
                     Canvas.Left="40" />
        </Canvas>
        <CheckBox x:Name="Autoget"
                  Content="Auto-request"
                  Foreground="black"
                  HorizontalAlignment="Left"
                  Margin="135,348,0,0"
                  VerticalAlignment="Top" />
